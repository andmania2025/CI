{
  "name": "ucikatu-monorepo",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:web": "bun run --cwd apps/web dev",
    "dev:admin": "bun run --cwd apps/admin dev",
    "build:web": "bun run --cwd apps/web build",
    "build:admin": "bun run --cwd apps/admin build",
    "lint": "bun run --cwd apps/web lint && bun run --cwd apps/admin lint",
    "test": "bun run --cwd apps/web test && bun run --cwd apps/admin test",
    "prepare": "lefthook install || true"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@prisma/client": "^7.2.0",
    "@types/node": "^25.0.1",
    "dotenv": "^16.4.5",
    "lefthook": "^2.0.12",
    "prisma": "^7.2.0"
  }
}
