# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Indentation override for all files
[*]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JavaScript, TypeScript, JSX, TSX files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS, SCSS files
[*.{css,scss}]
indent_size = 2

# Configuration files
[*.config.{js,ts}]
indent_size = 2
max_line_length = 120

# Package files
[package.json]
indent_size = 2

# Lock files (keep as-is)
[package-lock.json]
indent_size = 2
[pnpm-lock.yaml]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile (use tabs)
[Makefile]
indent_style = tab

